# -----------------------------------------------------------------------------
# GENERAL SETTINGS
# -----------------------------------------------------------------------------
ENVIRONMENT=development
LOG_LEVEL=INFO
IMAGE_TAG=latest

# -----------------------------------------------------------------------------
# POSTGRESQL CONFIGURATION
# -----------------------------------------------------------------------------
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_postgres_password_here
POSTGRES_DEFAULT_DB=postgres
POSTGRES_PORT=5432

# Database names for each service
PEDIDOS_DB_NAME=pedidos_db
MOTOTAXIS_DB_NAME=mototaxis_db

# -----------------------------------------------------------------------------
# MONGODB CONFIGURATION
# -----------------------------------------------------------------------------
MONGO_ROOT_USER=admin
MONGO_ROOT_PASSWORD=your_secure_mongo_root_password_here
MONGO_PORT=27017

# Application user (created by init script)
MONGO_APP_USER=app_user
MONGO_APP_PASSWORD=your_secure_mongo_app_password_here
MONGO_DB_NAME=db_empresas
MONGO_MENUS_COLLECTION=menus
MONGO_USERS_COLLECTION=usuarios_empresas

# -----------------------------------------------------------------------------
# REDIS CONFIGURATION
# -----------------------------------------------------------------------------
REDIS_PORT=6379
REDIS_PASSWORD=
# Leave empty for no password in development
# REDIS_PASSWORD=your_secure_redis_password_here

# Redis databases per service
MOTOTAXIS_REDIS_DB=1

# -----------------------------------------------------------------------------
# RABBITMQ CONFIGURATION
# -----------------------------------------------------------------------------
RABBITMQ_USER=guest
RABBITMQ_PASSWORD=guest
RABBITMQ_PORT=5672
RABBITMQ_MANAGEMENT_PORT=15672
RABBITMQ_HEARTBEAT=600
RABBITMQ_BLOCKED_CONNECTION_TIMEOUT=300

# RabbitMQ Exchanges & Queues
RABBITMQ_PEDIDOS_EXCHANGE=pedidos_exchange
RABBITMQ_PEDIDOS_QUEUE=cola_pedidos_nuevos
RABBITMQ_PEDIDOS_ROUTING_KEY=pedido.nuevo
RABBITMQ_DISPATCH_EXCHANGE=dispatch_exchange
RABBITMQ_DISPATCH_MOTOTAXI_ROUTING_KEY=pedido.requiere_mototaxi
RABBITMQ_MOTOTAXI_DISPATCH_QUEUE=cola_despacho_mototaxis
RABBITMQ_ORDER_UPDATES_QUEUE=cola_actualizaciones_pedido
RABBITMQ_ORDER_UPDATE_ROUTING_KEY=pedido.conductor_acepto
RABBITMQ_CLIENT_NOTIFICATION_QUEUE=cola_notificaciones_cliente_bot
RABBITMQ_NOTIFY_CLIENT_ROUTING_KEY=pedido.asignado_notificar_cliente
INCOMING_MESSAGES_EXCHANGE=incoming_messages_exchange
INCOMING_MESSAGES_QUEUE=incoming_messages
INCOMING_MESSAGES_ROUTING_KEY=message.incoming

# -----------------------------------------------------------------------------
# BOT WHATSAPP SERVICE
# -----------------------------------------------------------------------------
BOT_WHATSAPP_PORT=5000

# Twilio Configuration (REQUIRED)
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_WHATSAPP_NUMBER=whatsapp:+14155238886

# Gemini AI (REQUIRED for message processing)
GEMINI_API_KEY=your_gemini_api_key_here

# Audio Processing
WHISPER_MODEL_SIZE=small
MAX_AUDIO_SIZE_MB=10

# -----------------------------------------------------------------------------
# SERVICIO EMPRESAS
# -----------------------------------------------------------------------------
SERVICIO_EMPRESAS_PORT=5001

# Security Keys (REQUIRED - generate unique values!)
EMPRESAS_SECRET_KEY=your_empresas_secret_key_here_min_32_chars
EMPRESAS_JWT_SECRET_KEY=your_empresas_jwt_secret_here_min_32_chars

FLASK_DEBUG=False

# -----------------------------------------------------------------------------
# SERVICIO PEDIDOS
# -----------------------------------------------------------------------------
SERVICIO_PEDIDOS_PORT=5003

# Security Keys (REQUIRED)
PEDIDOS_SECRET_KEY=your_pedidos_secret_key_here_min_32_chars
PEDIDOS_PROJECT_NAME=Servicio de Pedidos

# -----------------------------------------------------------------------------
# SERVICIO MOTOTAXIS
# -----------------------------------------------------------------------------
SERVICIO_MOTOTAXIS_PORT=5002

# Security Keys (REQUIRED)
MOTOTAXIS_JWT_SECRET_KEY=your_mototaxis_jwt_secret_here_min_32_chars
MOTOTAXIS_PROJECT_NAME=Servicio de Mototaxis
MOTOTAXIS_DEBUG=False
ACCESS_TOKEN_EXPIRE_MINUTES=60
REDIS_DRIVER_LOCATIONS_KEY=driver_locations
